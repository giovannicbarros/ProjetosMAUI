<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Layouts.FlexLayoutPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="FlexLayoutPage">
    <FlexLayout
        AlignContent="Stretch"
        AlignItems="Start"
        Direction="Column"
        JustifyContent="SpaceEvenly"
        Wrap="NoWrap">
        <Label
            Padding="10"
            BackgroundColor="AliceBlue"
            FlexLayout.Basis="30%"
            FlexLayout.Grow="0"
            FlexLayout.Order="2"
            FlexLayout.Shrink="0"
            Text="FlexLayout linha 01" />
        <Label
            Padding="10"
            BackgroundColor="Aqua"
            FlexLayout.AlignSelf="Stretch"
            FlexLayout.Order="3"
            Text="FlexLayout linha 02" />
        <Label
            Padding="10"
            BackgroundColor="Beige"
            FlexLayout.Order="1"
            Text="FlexLayout linha 03" />
        <Label
            Padding="10"
            BackgroundColor="Bisque"
            FlexLayout.Order="0"
            Text="FlexLayout linha 04" />
    </FlexLayout>
</ContentPage>